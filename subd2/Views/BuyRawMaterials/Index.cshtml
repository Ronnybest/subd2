@model IEnumerable<subd2.Models.BuyRawMaterial>

@{
    ViewData["Title"] = "Index";
}

<h1>Latest raw material procurement operations</h1>

<p>
    <a asp-action="Create" style="font-size: 26px">Buy raw materials</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Raw material
                
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
                
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Summ)
                
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.EmployeeNavigation)*@
                Employee
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.RawMaterialsNavigation)*@
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.RawMaterialsNavigation.Name)
                
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Count)
                
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Summ)
                
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.EmployeeNavigation.FullName)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |*@
                @*<a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                | <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
