@model subd2.Models.FinishedProduct

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>FinishedProduct</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" onsubmit="return validateForm()" name="editForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" asp-is-invariant="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitId" class="control-label"></label>
                <select asp-for="UnitId" class="form-control" asp-items="ViewBag.UnitId"></select>
                <span asp-validation-for="UnitId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Count" class="control-label"></label>
                <input asp-for="Count" class="form-control" asp-is-invariant="true" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sum" class="control-label"></label>
                <input asp-for="Sum" class="form-control" asp-is-invariant="true" />
                <span asp-validation-for="Sum" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="Sebes" class="control-label"></label>
                <input asp-for="Sebes" class="form-control" asp-is-invariant="true" />
                <span asp-validation-for="Sebes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        function validateForm() {
            var count = parseFloat(document.forms["editForm"]["Count"].value);
            var sum = parseFloat(document.forms["editForm"]["Sum"].value);

            if (count < 0 || sum < 0) {
                alert("Count and Sum must not be negative");
                return false;
            }
            return true;
        }
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
