@if (TempData["Message"] != null)
{
    <div class="alert alert-danger" id="msg">@TempData["Message"]</div>
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" onsubmit=" return multiply()" name="createForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product" class="control-label"></label>
                <select asp-for="Product" class ="form-control" asp-items="ViewBag.Product"></select>
            </div>
            <div class="form-group">
                <label asp-for="Count" class="control-label"></label>
                <input asp-for="Count" class="form-control" id="count" type="number" />
