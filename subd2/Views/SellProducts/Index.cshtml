@model IEnumerable<subd2.Models.SellProduct>

@{
    ViewData["Title"] = "Index";
}

<h1>Last selling products history</h1>

<p style="font-size: 34px">
    <a asp-action="Create">Sell now</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Product
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
                
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Summ)
                
            </th>
            <th>
                Employee
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.ProductNavigation.Name)
                
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Summ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeNavigation.FullName)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
